<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kangladevelopers.filmfinder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activity.TutorialActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activity.HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MoveFinder"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Setting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TestYoutubePlayer"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Activity.MovieListActivity" />
        <activity
            android:name=".Activity.MovieDetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Activity.ShowBookDetailsActivity" />
        <activity android:name=".Activity.TestActivity" />
        <activity
            android:name=".Activity.Player"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.MusicDetailActivity" />
        <activity
            android:name=".Activity.EditProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ListAllActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BioDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".developers.ui.DeveloperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.EditMusicDetails" />
        <activity
            android:name=".developers.ui.Correction"
            android:screenOrientation="portrait" />
        <activity
            android:name=".developers.ui.CorrectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".developers.ui.MusicListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.HelpDetailsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
