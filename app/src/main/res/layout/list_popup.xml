<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#955051a4"
    android:orientation="vertical">

    <LinearLayout
        style="@style/sort_layout"
        android:visibility="gone">

        <ImageButton style="@style/sort_image" />

        <TextView
            android:id="@+id/tvCaption"
            style="@style/sort_text"
            android:text="Sort by:" />

    </LinearLayout>

    <View
        style="@style/sort_line"/>

    <!-- HEADING LINE FINISH ######################## -->

    <LinearLayout
        android:id="@+id/ll_byName"
        style="@style/sort_layout"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_sortName"
            style="@style/sort_image"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/field_1"
            style="@style/sort_text"
            android:text="Name" />

    </LinearLayout>

    <View
        style="@style/sort_line"/>

    <!-- ONE LINE FINISH ######################## -->

    <LinearLayout
        android:id="@+id/ll_byRelease"
        style="@style/sort_layout"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_sortRelease"
            style="@style/sort_image" />

        <TextView
            android:id="@+id/field_2"
            style="@style/sort_text"
            android:text="Release" />

    </LinearLayout>

    <View
        style="@style/sort_line"/>

    <!-- TWO LINE FINISH ######################## -->

    <LinearLayout
        android:id="@+id/ll_byRating"
        style="@style/sort_layout"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_sortRating"
            style="@style/sort_image" />

        <TextView
            android:id="@+id/field_3"
            style="@style/sort_text"
            android:text="Ratings" />

    </LinearLayout>

    <View
        style="@style/sort_line"/>

    <!-- THREE LINE FINISH ######################## -->
</LinearLayout>